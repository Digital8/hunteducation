<div class="form">
	<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
	
	<button type="button" title="<?php echo $this->__('Add New Address') ?>" class="button small right" onclick="setLocation('<?php echo $this->getAddNewUrl() ?>')"><?php echo $this->__('Add New Address') ?></button>
	
	<h2><div class="icon animated-icon" style="background-image: url(<?php echo $this->getSkinUrl('images/icons/form-delivery-animation.png') ?>);"><img src="<?php echo $this->getSkinUrl('images/icons/form-delivery.png') ?>" alt="Change Billing Address" /></div>Change Billing Address</h2>
	
	<table class="multi-address">
	    <?php foreach ($this->getAddressCollection() as $_address): ?>
	    	<tr>
	    		<td class="billing">
	    			<div class="right">
	    				<a href="<?php echo $this->getEditAddressUrl($_address) ?>"><?php echo $this->__('Edit') ?></a> 
	    				<span class="separator">|</span> 
	    				<a href="<?php echo $this->getSetAddressUrl($_address) ?>"><?php echo $this->__('Select') ?></a>
	    			</div>
	    			
	    			<?php if($this->isAddressDefaultBilling($_address)): ?>
	    				<h2><?php echo $this->__('Default Billing') ?></h2>
	    			<?php endif; ?>
	    			
	    			<?php if($this->isAddressDefaultShipping($_address)): ?>
	    				<h2><?php echo $this->__('Default Shipping') ?></h2>
	    			<?php endif; ?>
	    			
	    			<?php echo $_address->format('html') ?>
	    		</td>
	    	</tr>
	    <?php endforeach; ?>
    </table>
    
    <a href="<?php echo $this->getBackUrl() ?>" class="button secondary small action-prev"><?php echo $this->__('Back to Billing Information') ?></a>
</div>
