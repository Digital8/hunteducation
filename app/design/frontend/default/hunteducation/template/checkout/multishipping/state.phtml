 */

$count = 0;
?>

<div id="checkout-timeline"><div>
	<h2>Checkout</h2>
	
	<ul>
	<?php
		foreach ($this->getSteps() as $_step){
			$count++;
			echo '<li' . ($_step->getIsActive() ? ' class="active"' : '') . '><span class="hide-standard hide-tablet hide-mobile">Step </span>' . $count . ': ' . $_step->getLabel() . '</li>';
		}
	?>
	</ul>
</div></div>
