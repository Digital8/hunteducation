<div class="form">
	<h2><div class="icon animated-icon" style="background-image: url(<?php echo $this->getSkinUrl('images/icons/form-cart-animation.png') ?>);"><img src="<?php echo $this->getSkinUrl('images/icons/form-cart.png') ?>" alt="Order Success" /></div>Order Success</h2>
	
	<h2><?php echo $this->__('Thank you for your purchase!') ?></h2>
	
    <p><?php echo $this->__('We are processing your order and you will soon receive an email with details of the order. Once the order has shipped you will receive another email with a link to track its progress.') ?></p>
    
    <?php if($_orderIds = $this->getOrderIds()): ?>
    <p>
    	Your order number<?php echo (count($_orderIds) > 1 ? 's are ' : ' is ') ?>
    	
        <?php $flag = false ?>
        <?php foreach ($_orderIds as $orderId=>$incrementId): ?>
            <?php if ($flag): ?>
                <?php echo ', ' ?>
            <?php endif; ?>
            <?php $flag = true ?>
            <a href="<?php echo $this->getViewOrderUrl($orderId) ?>"><?php echo $incrementId ?></a>
        <?php endforeach; ?>
    </p>
    <?php endif; ?>
    
    <?php echo $this->getChildHtml() ?>
    
    <button type="button" class="button action-next" onclick="setLocation('<?php echo $this->getContinueUrl() ?>')">Continue Shopping</button>
</div>
