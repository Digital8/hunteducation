<?xml version="1.0"?>
<layout version="1.0.0">
	<turnkeye_testimonial_index_index>
		<label>Testimonials</label>
		<reference name="head">
		    <action method="setTitle"><title>Client Testimonials</title></action>
		</reference>
		
		<reference name="root">
		    <action method="setTemplate"><template>page/1column.phtml</template></action>
	    </reference>
	    
	    <reference name="page_breadcrumbs">
	    	<block type="cms/block" name="breadcrumb_company">
	    	    <action method="setBlockId"><block_id>breadcrumb_company</block_id></action>
	    	</block>
	    </reference>
	    
		<reference name="content">
			<block type="turnkeye_testimonial/testimonial" name="testimonials" template="turnkeye/testimonial/testimonials.phtml" />
		</reference>
    </turnkeye_testimonial_index_index>
</layout>
