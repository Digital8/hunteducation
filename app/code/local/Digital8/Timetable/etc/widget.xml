		<description>Intake view widget</description>
		<is_email_compatible>0</is_email_compatible>
		<parameters>
			<intake_id type="complex" translate="label">
				<visible>1</visible>
				<required>1</required>
				<label>Intake</label>
				<type>label</type>
				<helper_block>
					<type>timetable/adminhtml_intake_widget_chooser</type>
					<data>
						<button translate="open">
							<open>Select Intake</open>
						</button>
